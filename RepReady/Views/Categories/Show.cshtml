@model RepReady.Models.Category
@{
    ViewBag.Title = "Afișare Categorie";
}
<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center text-primary">@ViewBag.Title</h2>
    <hr class="mb-4">

    <!-- Category Information -->
    <div class="card shadow-sm border-0">
        <div class="card-body text-center">
            <h3 class="card-title text-primary fw-bold">
                <i class="bi bi-tag-fill me-2"></i> @Model.Name
            </h3>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <!-- Delete Button -->
        <form method="post" asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
            <button class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Șterge Categoria
            </button>
        </form>

        <!-- Back to Categories List -->
        <a class="btn btn-outline-success btn-lg" href="/Categories/Index/">
            <i class="bi bi-arrow-left-circle"></i> Înapoi la Lista Categorii
        </a>
    </div>
</div>
