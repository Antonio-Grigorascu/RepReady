<br />
<h2 class="text-center">Afisare antrenamente</h2>
<br />

@if (ViewBag.InvitationsCount > 0)
{
    @if (ViewBag.InvitationsCount == 1)
    {
        <div class="alert-danger">Aveti o invitație nouă</div>
    }
    else
    {
        <div class="alert-danger">Aveti @ViewBag.InvitationsCount invitații noi</div>
    }
}


@if(ViewBag.Message != null)
{
    <div class="alert-success p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}
<br />

<a class="btn btn-success" asp-controller="Workouts" asp-action="New">Adauga antrenament</a>
<br/>

 @foreach (var workout in ViewBag.Workouts)
{
    <div class="card">
        <partial name="WorkoutInfo" model="workout"></partial>
        <a class="btn btn-success" asp-controller="Workouts" asp-action="Show" asp-route-id="@workout.Id">Afisare antrenament</a>
    </div>
    <br />
    <br />
} 


@* Afisarea paginata a articolelor *@

<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item"> <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
            }

            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>