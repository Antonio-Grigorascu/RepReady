@model RepReady.Models.Workout

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">

            <h2 class="text-center mb-4 text-primary">Editare Antrenament</h2>

            <div class="card shadow-lg">
                <div class="card-body">
                    <form method="post" asp-action="Edit" asp-controller="Workouts" asp-route-id="@Model.Id">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Titlu Antrenament</label>
                            
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Descriere Antrenament</label>
                            <textarea asp-for="Description" class="form-control summernote"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Duration" class="form-label fw-bold">Durată Antrenament</label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label for="CategoryId">Selectati categoria</label>
                            <select asp-for="CategoryId" asp-items="Model.Categ" class="form-select">
                                <option value="">Selectati categoria</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <!-- Edit users -->
                        <!-- Multiple choice users -->
                        <div class="mb-4">
                            <label>Utilizatori</label><br />

                            @foreach (var user in ViewBag.Users)
                            {
                                bool isChecked = ViewBag.SelectedUsers.Contains(user.Id);
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="UsersIdList" value="@user.Id" id="user_@user.Id" @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="user_@user.Id">
                                        @user.UserName
                                    </label>
                                </div>
                            }

                        </div>

                        <br />
                        <div class="alert alert-danger validation-summary-valid">
                            <ul>
                                <li style="display:none"></li>
                            </ul>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-sm btn-success" type="submit">Modifica antrenament</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

