@model RepReady.Models.Workout
<h2 class="text-center mt-5">Editare antrenament</h2>
<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            <form method="post" asp-action="Edit" asp-controller="Workouts" asp-route-id="@Model.Id">
                @*id?*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Titlu Antrenament</label>
                    <br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descriere Antrenament</label>
                    <br />
                    <textarea asp-for="Description" class="form-control summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="form-label">Titlu Antrenament</label>
                    <br />
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label for="CategoryId">Selectati categoria</label>
                    <br />
                    <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                        <option value="">Selectati categoria</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    <br />
                </div>
                <br />
                <button class="btn btn-sm btn-success" type="submit">Modifica antrenament</button>
            </form>
        </div>
    </div>
</div>

