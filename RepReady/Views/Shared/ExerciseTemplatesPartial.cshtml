<style>
    .container-container{
        width:80vw;
    }
    .exercise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    .exercise-card {
        display: flex;
        flex-direction: column;
        height: 100%;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .exercise-header,
    .exercise-details {
        flex-grow: 1;
    }

    .d-flex.justify-content-center {
        margin-top: auto;
    }
</style>


<h2 class="text-center mb-4">Lista Modelelor de Exerciții</h2>

<div class="container-container">
    <div class="exercise-grid">
        @foreach (var template in Model)
        {
            <div class="exercise-card p-4 border rounded-3 shadow-lg">
                <div class="exercise-header mb-3">
                    <h3 class="exercise-title text-center text-primary">@template.Title</h3>
                </div>
                <div class="exercise-details mb-3">
                    <p><strong>Description:</strong> @template.Description</p>
                    <p><strong>Reps:</strong> @template.Reps</p>
                    <p><strong>Sets:</strong> @template.Sets</p>
                </div>
            </div>
        }
    </div>
</div>
