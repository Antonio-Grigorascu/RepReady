@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-4">
    <!-- Dashboard Statistics -->
    <h2 class="text-center mb-5">Dashboard - Statistici</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Utilizatori</h5>
                    <p class="card-text">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Antrenamente</h5>
                    <p class="card-text">@ViewBag.WorkoutCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Exerciții</h5>
                    <p class="card-text">@ViewBag.ExerciseCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Comentarii</h5>
                    <p class="card-text">@ViewBag.CommentCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Template-uri</h5>
                    <p class="card-text">@ViewBag.TemplateCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Categorii</h5>
                    <p class="card-text">@ViewBag.CategoryCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- User Role Assignment Form -->
    <div class="mt-5">
        <h2 class="text-center">Atribuie rol de Organizator</h2>
        <form method="post" asp-action="MakeOrganizer" class="mt-4">
            <div class="form-group">
                <label for="email">User Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <button type="submit" class="btn btn-primary mt-4">Atribuie rol</button>
        </form>
    </div>
</div>
